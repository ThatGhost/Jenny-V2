      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jenny_V2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dictations">

    <Grid>
        <Button Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="50" Width="124" Click="Button_Click"/>
        <Button x:Name="btnToggleDictation" Content="Stop Dictations" HorizontalAlignment="Left" Margin="143,10,0,0" VerticalAlignment="Top" Height="50" Width="124" Click="ToggleDictation_Click"/>
        <Ellipse x:Name="IsListening" HorizontalAlignment="Left" Height="50" Margin="292,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="50" Fill="#FF2FED15"/>
        <RichTextBox x:Name="TxtBoxDictation" Margin="10,83,10,10">
            <FlowDocument>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Page>
